<% if flash.any? %>
  <div class="container">
    <div class="row flash-message-container">
      <div class="col-md-12">
        <% flash.each do |key, msg| %>
          <div class="alert alert-<%= key %> alert-dismissible alert-sm fade show" role="alert">
            <ul>
              <li><%= msg %></li>
            </ul>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>