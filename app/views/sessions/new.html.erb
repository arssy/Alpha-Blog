<div class="container">
  <div class="row">
    <div class="col-md-12">
      <br> <h1 class="center-text">Log in</h1> <br>
    </div>
  </div>
  <div class="row">
    <%= form_for :session, url: login_path do |f| %>
      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label :email, 'Email' %>
        </div>
        <div class="col-md-9">
          <%= f.text_field :email, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label :password, 'Password' %>
        </div>
        <div class="col-md-9">
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-12">
          <%= f.submit "Log in", class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>