<% if @article.errors.any? %>
  <h2>This following error prevented the article from being updated</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @article do |f| %>
  <div class="form-group row">
    <div class="col-md-2">
      <%= f.label :title, 'Title', class: 'col-md-2' %>
    </div>
    <div class="col-md-10">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-2">
      <%= f.label :description, 'Description', class: 'col-md-2' %>
    </div>
    <div class="col-md-10">
      <%= f.text_area :description, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>