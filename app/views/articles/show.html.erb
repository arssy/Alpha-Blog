<div class="container">
  <div class="row">
    <div class="col-md-12 card mt-4 article-card">
      <div class="card-body article-content">
        <h4 class="center-text"><%= @article.title %></h4>
        <div class="row">
          <div class="col-md-12">
            <%= simple_format(@article.description) %>
          </div>
        </div>
        
        <div class="row">
          <div class="col-md-12">
            <span class="article-meta-details">
              Created by: <%= link_to "#{@article.user.username if @article.user}", user_path(@article.user) %>,
              <%= time_ago_in_words(@article.created_at) %> ago, 
              last updated at: <%= time_ago_in_words(@article.updated_at) %> ago
            </span><br>
          </div>
        </div>
        <hr>
        
        <div class="row">
          <div class="col-md-12">
            <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-primary btn-sm' %>
            <%= link_to 'View all article', articles_path, class: 'btn btn-success btn-sm' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>