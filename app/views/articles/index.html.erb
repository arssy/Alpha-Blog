<div class="container">
  <br>
  <div class="row">
    <div class="col-md-12">
      <h2>Article Index Page</h2>
      <%= link_to 'Create new article', new_article_path, class: 'btn btn-primary btn-sm' %>
    </div>
  </div>
  <br>

  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-md-3 mx-2 my-1">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%= article.title %></h5>
            <p class="card-text"><%= truncate(article.description) %></p>
            <span>
              <%= link_to 'Show', article_path(article), class: 'btn btn-sm btn-primary' %>
              <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-sm btn-success' %>
              <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure to delete this data?"}, class: 'btn btn-sm btn-danger' %>
            </span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>